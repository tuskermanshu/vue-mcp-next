{
  "name": "@vue-mcp-next/monorepo",
  "version": "0.1.0",
  "description": "Vue MCP Next - A modern Vue.js Model Context Protocol implementation",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "playground",
    "examples/*"
  ],
  "packageManager": "pnpm@9.0.0",
      "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "pnpm -r --filter='./packages/*' build",
    "build:all": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:core": "pnpm --filter='@vue-mcp-next/core' dev",
    "dev:plugin": "pnpm --filter='@vue-mcp-next/plugin' dev",
    "dev:playground": "pnpm --filter='playground' dev",
    "test": "pnpm -r test",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules/.pnpm",
    "clean:dist": "pnpm -r --filter='./packages/*' clean",
    "release": "changeset publish",
    "version": "changeset version",
    "preview": "pnpm --filter='playground' preview",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^9.33.0",
    "eslint-plugin-vue": "^10.4.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "vue": "^3.5.18"
  },
  "pnpm": {
    "overrides": {
      "vue": "^3.5.18"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ]
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "vue",
    "mcp",
    "model-context-protocol",
    "typescript",
    "monorepo"
  ],
  "author": "Vue MCP Team",
  "license": "MIT"
}